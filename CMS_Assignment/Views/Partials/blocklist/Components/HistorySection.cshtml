@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HistorySection)Model.Content;
}

<section> 
    <div class="mx-auto px-25 py-30 max-w-7xl flex flex-row gap-x-10 text-bodytext">
        <div class="w-1/3">
            @if (content.HistoryImage != null)
            {
                <img src="@content.HistoryImage.Url()" alt="" class="" />
            }
            <p class="text-xs">@content.HistoryImageText</p>
        </div>
        <div class="w-2/3 justify-center gap-y-4">
            <p class="text-xs rte">@content.HistoryText</p>
        </div>
    </div>

</section>

