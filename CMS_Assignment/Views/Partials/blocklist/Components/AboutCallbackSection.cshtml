@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using CMS_Assignment.ViewModels
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutCallbackSection)Model.Content;
}

<section class="py-28"> 
    <div class="max-w-7xl mx-auto px-4 flex gap-10"> 
        <div class=" flex flex-col w-7/12">
            <div class="rte">
                @Html.Raw(content.AboutCallbackSectionBody)
            </div>
        </div>

        <div class="flex flex-col w-5/12 shadow-md -mt-[11rem] z-[99]"> 
            <div class="bg-primary text-secondary"> 
                <p class="py-[1.5rem] px-[2rem] text-[1.875rem] font-bold">@content.AboutCallbackFormTitle</p>
            </div>
            <p class="text-sm py-[1.5rem] px-[2rem]">@content.AboutCallbackFormDescription</p>

            <partial name="Partials/Forms/_CallbackForm" model="new CallbackFormViewModel()"/>

            @if(TempData["FormSuccess"] != null)
            {
                <div class="bg-green-50 text-green-700 p-4 mx-[2rem] mb-4 rounded-md">
                    @TempData["FormSuccess"]
                </div>
            } else if (TempData["FormError"] != null)
            {
                <div class="bg-red-50 text-red-700 p-4 mx-[2rem] mb-4 rounded-md">
                    @TempData["FormError"]
                </div>
            }
        </div>
    </div>
</section>