@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var contactAdress = siteSettings?.ContactAdress;
}

<div class="bg-primary"> 
    <div class="max-w-7xl mx-auto px-4 flex items-center justify-between"> 
        <p class="text-xs text-neutral">@contactAdress</p>
        <div class="flex"> 
            @if (siteSettings?.PlatformList != null)
            {
                foreach(var item in siteSettings.PlatformList)
                {
                    if(item.Content is SocialMediaItem mediaItem)
                    {
                        switch (mediaItem.PlatformName!.ToLower())
                        {
                            case "facebook":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-neutral border-l border-[var(--clr-main-light)] last:border-r ">
                                    <i class="fa-brands fa-facebook-f"></i>
                                </a>
                                break;

                            case "x":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-neutral border-l border-[var(--clr-main-light)] last:border-r ">
                                    <i class="fa-brands fa-twitter"></i>
                                </a>
                                break;

                            case "linkedin":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-neutral border-l border-[var(--clr-main-light)] last:border-r ">
                                    <i class="fa-brands fa-linkedin-in"></i>
                                </a>
                                break;

                            case "tiktok":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-neutral border-l border-[var(--clr-main-light)] last:border-r ">
                                    <i class="fa-brands fa-tiktok"></i>
                                </a>
                                break;

                            case "youtube":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" class="flex items-center justify-center p-3 text-base text-neutral border-l border-[var(--clr-main-light)] last:border-r ">
                                    <i class="fa-brands fa-youtube"></i>
                                </a>
                                break;
                        }
                    }
                }
            }
        </div>
    </div>
</div>
 